      </tr>
      <tr>
        <td class="won">Ralph<div class="colorize right">(35%)</div></td>
        <td class="lost">Leroy Jenkins</td>
        <td>§250</td>
      </tr>
      <tr>
        <td class="lost">Ralph</td>
        <td class="won">Leroy Jenkins<div class="colorize right">(70%)</div></td>
        <td>§25</td>
      </tr>
    </table>
  <script type="text/javascript">
    $('.colorize').each(function(){
      t = $(this).text()
      m = /\d+/
      if(!m) return
      n = t.match(m)
      g = 128
      h = parseInt((n/100)*g)
      $(this).css({color: 'hsl(' + h +',100% ,33%)'})
    })
  </script>
  </section>
