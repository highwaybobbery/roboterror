<section class="half left">
  <h2>Buy New Stuff</h2>
  <table data-role="equipment">
    <tr>
      <th>Name</th>
      <th>Price</th>
    </tr>
    <% @equipment.each do |equipment| %>
      <tr data-equipment="<%= equipment.id %>">
        <td><%= equipment.name %></td>
        <td><%= equipment.price %></td>
        <td>
          <%= form_for @inventory do |form| %>
            <%= form.hidden_field :equipment_id, :value => equipment.id %>
            <%= form.submit "Buy", :disable_with => "Yay" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</section>
<section class="half right">
  <h2>Existing Inventory</h2>
  <%= render 'inventories/inventories' %>
</seciton>
</section>
